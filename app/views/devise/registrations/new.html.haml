.sign-up-wrapper
  = render "/partial/header"
  %main.sign-up-content
    %h2.sign-up-content__head 会員情報入力
    .sign-up-content__main
      .sign-up-content__main__form
        = form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .sign-up-content__main__form__group
            = f.label :nickname,"ニックネーム"
            %span.sign-up-content__main__form__group__require 必須
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname",placeholder:"  例)アプリ太郎", class: "sign-up-content__main__form__group__field"
          .sign-up-content__main__form__group
            = f.label :mial,"メールアドレス"
            %span.sign-up-content__main__form__group__require 必須
            %br/
            = f.text_field :email, autofocus: true, autocomplete: "email",placeholder:"  PC・携帯どちらでも可", class: "sign-up-content__main__form__group__field"
          .sign-up-content__main__form__group
            = f.label :password,"パスワード"
            %span.sign-up-content__main__form__group__require 必須
            %br/
            = f.password_field :password, autocomplete: "new-password",placeholder:"  6文字以上の半角英数字", class: "sign-up-content__main__form__group__field"
          .sign-up-content__main__form__group
            = f.label :password,"パスワード(確認用)"
            %span.sign-up-content__main__form__group__require 必須
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"  上記と同じパスワードを入力", class: "sign-up-content__main__form__group__field"
          .sign-up-content__main__form__actions
            = f.submit "新規登録",class:"sign-up-content__main__form__actions__button"

  = render "/partial/footer"

